@inject Microsoft.AspNetCore.Identity.SignInManager<ProactoDoctor.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logout" asp-controller="Account">
    <ul class="nav navbar-nav">
        <li class="nav-link text-white m-1">
            Hello, @User.Identity.Name!
        </li>
        <li>
           <a class="nav-link text-white m-1" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
        </li>
    </ul>
</form>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            @*@Html.ActionLink("Sign Up", "Register", "Account", routeValues:null, htmlAttributes: new { id="registrationLink"})*@
            <a class="nav-link text-white m-1" asp-action="Register" asp-controller="Account" id="registrationLink">SignUp</a>
        </li>
        <li>
            @*@Html.ActionLink("Sign In", "Login", "Account", routeValues:null, htmlAttributes: new { id="loginLink"})*@
            <a class="nav-link text-white m-1" asp-action="Login" asp-controller="Account" id="loginLink">SignIn</a>
        </li>
    </ul>
}
